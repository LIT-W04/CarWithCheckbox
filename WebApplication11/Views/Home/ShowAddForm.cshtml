
<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/addcar">
            <input type="text" class="form-control" placeholder="Make" name="make" />
            <br />
            <input type="text" class="form-control" placeholder="Model" name="model" />
            <br />
            <input type="text" class="form-control" placeholder="Year" name="year" />
            <br />
            <input type="text" class="form-control" placeholder="Price" name="price" />
            <br />

            <select class="form-control" name="carType" id="car-type">
                <option>-- Choose Car Type --</option>
                <option value="0">Sedan</option>
                <option value="1">SUV</option>
                <option value="2">Sports Car</option>
                <option value="3">Supercar</option>
            </select>
            
            
            <div class="row">
                <div class="col-md-2">
                    
                    <input id="has-leather" type="checkbox" name="hasleatherseats" class="form-control" value="true"/>
                    <input type="hidden" name="hasleatherseats" value="false"/>
                </div>
                <div class="col-md-6">
                    Has Leather Seats
                </div>
            </div>
            
            

            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts
{
    <script src="/Content/newcar.js"></script>
}
